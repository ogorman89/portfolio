---
import MetaHead from "../components/general/MetaHead.astro";
import Footer from "@components/general/Footer.astro";
import Navbar from "@components/general/Navbar.astro";
import "../styles/style.css";

export interface Props {
	content: {
		title: string;
		description: string;
		date?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, date, heroImage },
} = Astro.props as Props;


// Match the `heroImage` frontmatter string to its correct
// Astro.glob() import of the file in the src/ directory.
const assets = await Astro.glob('../../public/assets/media/**/*');
const heroImageAsset = assets.find(asset => {
	if (!heroImage) {
		return false;
	}
  	if (!asset.default?.src) {
		return false;
	}
  	const index = asset.default.src.indexOf('/media/');
  	return asset.default.src.slice(index) === heroImage;
});
console.log(heroImageAsset)
---

<html>
	<head>
		<MetaHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
  				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Navbar />
		<main>
			<article>
				{heroImageAsset && (
					<img
						width={720}
						height={360}
						src={heroImageAsset.default}
						alt=""
					/>
				)}
				<h1 class="title">{title}</h1>
				{date && <div>Published on {new Date(date).toLocaleDateString('en-us', {
					year: 'numeric',
					month: 'short',
					day: 'numeric',
				})}</div>}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
---
import MetaHead from "../components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";
import "../styles/style.css";

export interface Props {
	content: {
		title: string;
		description: string;
		date?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, date, heroImage },
} = Astro.props as Props;
---

<html>
	<head>
		<MetaHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
  				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Layout>
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={`/src${heroImage}`}
						alt="placeholder"
					/>
					)}
					<h1 class="title">{title}</h1>
					{date && <div>Published on {new Date(date).toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'short',
						day: 'numeric',
					})}</div>}
					<slot />
			</article>
		</Layout>
	</body>
</html>
---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light mb-12"
>
  <h2 class="w-[15rem] mt-8">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
        <div class="mt-8">
          <div class="flex justify-between items-start flex-col md:flex-row">
              <div class="flex flex-col">
                <h3 class="text-xl font-bold text-purple">{item.position}</h3>
                {item.employer && <h3 class="text-l font-semibold">{item.employer}</h3>}
              </div>
              <p class="text-sm dark:text-light self-start md:self-end">
              {item.startDate} - {item.endDate}
              </p>
          </div>
          <p class="text-sm dark:text-light">{item.location}</p>
          <ul class="mt-4">
            {item.description.map((item) => (
              <li class="dark:text-light">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
